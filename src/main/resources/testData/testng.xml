<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Testing Suite" parallel="false">

    <test name="Users Test">
        <classes>
            <class name="users.List_Users"/>
            <class name="users.Get_Single_User"/>
            <class name="users.Not_Found_User"/>
            <class name="users.Create_User"/>
            <class name="users.Update_User"/>
            <class name="users.UpdateUserPatch"/>
            <class name="users.Delete_User"/>
        </classes>
    </test>

    <test name="Resources Test">
        <classes>
            <class name="resources.GetListResources"/>
            <class name="resources.GetSingleResources"/>
            <class name="resources.GetSingleResourcesNotFound"/>
            <class name="resources.DelayedResponse"/>
        </classes>
    </test>

    <test name="Register Test">
        <classes>
            <class name="register.Valid_Register"/>
            <class name="register.Invalid_Register"/>
        </classes>
    </test>

    <test name="Login Test">
        <classes>
            <class name="login.PostLoginSuccessFull"/>
            <class name="login.PostLoginUnsuccessFull"/>
        </classes>
    </test>

</suite>
